<%= form_for(state,  url: states_path) do |f| %>
    <% if state.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(state.errors.count, "error") %> prohibited this container from being saved:</h2>

          <ul>
            <% state.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <%= hidden_field_tag(:state_id, state.id) %>
    <div class="field">
      <%= f.label :alerta %><br>
      <%= f.select(:alert, [['Peligro-rojo', "danger"], ['Precaucion-amarillo', "warning"], ['Normal-blanco', "normal"]], {},{ :class => 'form-control' }) %>
    </div>

    <div class="actions">
      <%= f.submit "Editar alerta", :class => 'btn btn-primary'  %>
    </div>
<% end %>
