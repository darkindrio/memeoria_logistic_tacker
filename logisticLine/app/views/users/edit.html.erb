<div class = "container">
<div class = "row">
  <div class = "col-md-6 col-md-offset-3">
    <div class ="well">
      <%= form_for @user, url: {action: "update"}, html: {class: "nifty_form"} do |f| %>
          <div class="field">
            <%= f.label :email %><br />
            <%= f.text_field :email, class: "form-control" %>
          </div>
          <div class="field">
            <%= f.label :role %><br />
            <%= f.select(:role, ['admin', 'visitor'], {},{ :class => 'form-control' }) %>
          </div>
          <div class="actions">
            <%= f.submit "Guardar cambios", class: "btn btn-primary", style: "margin-top: 16px;" %>
          </div>
      <% end %>
    </div>
  </div>
</div>
</div>