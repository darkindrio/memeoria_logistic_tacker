<div class = "container">
  <h1>Lista de usuarios</h1>
  <table class = "table">
    <thead>
    <tr>
      <th> Nombre</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @users.each do |user| %>
        <tr>
          <td><%= user.email %> </td>
          <td>
            <%= link_to  edit_user_as_admin_path(user_id: user.id), class: "btn btn-primary" do %>
                <i class="glyphicon glyphicon-wrench"></i> Administrar usuario
            <%end %>
          </td>

        </tr>
    <% end %>
    </tbody>
  </table>
  <%= link_to "Crear usuario", new_registration_path(User.new) %><br />
  <br>
</div>