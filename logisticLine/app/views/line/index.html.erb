<div class = "container">
  <h1>Mis contenedores</h1>
  <table class = "table">
    <thead>
    <tr>
      <th> Nombre</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% modal_counter = 0 %>
    <% @container.each do |container| %>
        <tr>
          <% line = container.line %>
          <td><%= container.number %> </td>
          <td><%= link_to 'Ver estadisticas', line,  class: "btn btn-info" %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
