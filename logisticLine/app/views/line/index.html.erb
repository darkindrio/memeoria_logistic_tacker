<div class = "container">
  <p id="notice"><%= notice %></p>

  <h1>Listing Lines</h1>

  <table class = "table">
    <thead>
    <tr>
      <th> Nombre</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @lines.each do |line| %>
        <tr>
          <td> Linea linea extra portuaria </td>
          <td><%= link_to 'Show', line,  class: "btn btn-info" %></td>
          <td><%= link_to 'Edit', edit_line_path(line), class: "btn btn-primary" %></td>
          <td><%= link_to 'Destroy', line, class: "btn btn-danger",method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Line', new_line_path %>
</div>
